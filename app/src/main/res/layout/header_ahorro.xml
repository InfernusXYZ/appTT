<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:background="@android:color/darker_gray"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Fecha"
        android:background="@color/columna1"
        android:gravity="center"
        android:textSize="12sp"
        android:padding="4dp"/>
<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@color/columna2"
    android:text="Ingreso Mensual"
    android:padding="4dp"
    android:gravity="center"
    android:textSize="12sp"
    />

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Ahorro Mensual"
    android:background="@color/columna3"
    android:gravity="center"
    android:textSize="12sp"
    android:padding="4dp"
    />

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Tasa de Ahorro"
    android:background="@color/columna4"
    android:gravity="center"
    android:textSize="12sp"
    android:padding="4dp"
    />
</LinearLayout>